<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center">Create new Comment to <%= campground.name %></h1>
    <div class="row">
        <!--<h1 style="text-align: center">Create a new campground</h1>-->
        <div class="col-md-4" style="margin: 25px auto;">
            <form action="/campground/<%=campground._id%>/comments", method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comments[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
             <a href="/campground">Go back</a>
        </div>
        <!--<a href="/campground">Go back</a>-->
    </div>
</div>
